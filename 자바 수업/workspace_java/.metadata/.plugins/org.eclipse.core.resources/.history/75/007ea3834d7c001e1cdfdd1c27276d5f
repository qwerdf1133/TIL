
public class Practice03ControlTest {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int odd = 0; // 홀수의 총합을 저장할 변수
		for(int i = 1; i <= 100; i+=2) {
			System.out.println(i+" ");
			odd = odd + i;
		}
		System.out.println();
		System.out.println("홀수의 총합은 : " + odd);
		
		//짝수의 총합
		int even = 0;
		for(int i = 100; i >= 1; i -= 2) {
			System.out.println(i+" ");
			even += i;
		}
		System.out.println("\n짝수의 총합은 : " + even);
		
		// 1 ~ 50 까지의 정수 중
		// 홀수, 짝수, 전체 총 합계를 구하시오.
		int sum; // 전체 합계를 저장할 변수
		sum = even = odd = 0;
		
		for(int i = 1; i <= 50; i++) {
			
			if(i % 2 == 0) {
				// 짝수일 경우 even 누적 합계 저장
				even += i;
			}else {
				// 홀수일 경우 odd 누적 합계 저장
				odd = odd + i;
			}
			// 전체 값을 누적 저장
			sum = sum + i;
		}
		// 결과 출력
		// ...
		
		/*
		 (사다리꼴의 넓이) = ((윗변+아랫변) * 높이 ) / 2
		 */
		int top = 5;
		int bottom = 10;
		int height = 7;
		double area = (top + bottom) * 7) / 2;
	}

}
