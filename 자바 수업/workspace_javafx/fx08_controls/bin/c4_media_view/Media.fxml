      <Slider fx:id="sliderVolume" blockIncrement="0.1" layoutX="453.0" layoutY="248.0" max="1.0" orientation="VERTICAL" prefHeight="66.0" prefWidth="14.0" />
      <Label layoutX="436.0" layoutY="319.0" text="소리조절" />
      <ProgressIndicator fx:id="indicator" layoutX="534.0" layoutY="271.0" progress="0.0" />
   </children>
